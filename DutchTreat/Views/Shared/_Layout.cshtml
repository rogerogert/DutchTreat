<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>DutchTreat: @ViewBag.Title</title>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <header>Welcome to DutchTreat</header>
    <menu>
        <ul>
            <li><a asp-controller="App" asp-action="Index">Home</a></li>
            <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
            <li><a asp-controller="App" asp-action="About">About</a></li>
        </ul>
    </menu>
    <section>
        <h2>@ViewBag.Title</h2>
        @RenderBody();
    </section>
    <footer>Copyright 2017 Dutch Treat LLC</footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/index.js"></script>
    @RenderSection("scripts",false)
</body>
</html>